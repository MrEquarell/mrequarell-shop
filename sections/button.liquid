<div id="section-cta">
  <div class="container">
    <h3> {{ section.settings.text-box }} </h3>
    <a href="{{ section.settings.link }}" var="btn-large" class="btn btn--cta var " style="border-radius:4px;">{{ section.settings.linktext }}</a>
  </div>
</div>

{% schema %}
{
  "name": {
    "en": "Button",
    "fr": "Boutton"
  },
  "settings": [
    {
      "id": "text-box",
      "type": "text",
      "label": "Heading",
      "default": "Title"
    },
    {
      "id": "link",
      "type": "url",
      "label": "Button link"
    },
    {
      "id": "linktext",
      "type": "text",
      "label": "Button text",
      "default": "Click here"
    }
  ],
  "presets": [
    {
      "name": "Button",
      "category": "Button"
    }
  ]
}
{% endschema %}

